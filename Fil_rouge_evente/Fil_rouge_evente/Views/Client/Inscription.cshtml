@model Fil_rouge_evente.Metier.Client
@{
    ViewBag.Title = "Inscription";
}

<h2>Inscription</h2>

<div>
    @using (Html.BeginForm("Inscription", "Client", FormMethod.Post))
    {
        <span>@Html.DisplayNameFor(model => model.civilite) : </span><span>@Html.EnumDropDownListFor(model => model.civilite)</span><span>@Html.ValidationMessageFor(model => model.civilite)</span>
        <span>@Html.DisplayNameFor(model => model.Nom) : </span><span>@Html.TextBoxFor(model => model.Nom)</span><span>@Html.ValidationMessageFor(model => model.Nom)</span><br />
        <span>@Html.DisplayNameFor(model => model.Prenom) : </span><span>@Html.TextBoxFor(model => model.Prenom)</span><span>@Html.ValidationMessageFor(model => model.Prenom)</span><br />
        <span>@Html.DisplayNameFor(model => model.Email) : </span><span>@Html.TextBoxFor(model => model.Email)</span><span>@Html.ValidationMessageFor(model => model.Email)</span><br />
        <span>@Html.DisplayNameFor(model => model.DateNaissance) : </span><span>@Html.TextBoxFor(model => model.DateNaissance, new { @class = "form-control datecontrol", type = "date" })</span><span>@Html.ValidationMessageFor(model => model.DateNaissance)</span>
        <span>@Html.DisplayNameFor(model => model.login) : </span><span>@Html.TextBoxFor(model => model.login)</span><span>@Html.ValidationMessageFor(model => model.login)</span><br />
        <span>@Html.DisplayNameFor(model => model.password) : </span><span>@Html.PasswordFor(model => model.password)</span><span>@Html.ValidationMessageFor(model => model.password)</span><br />
        <span>@Html.DisplayNameFor(model => model.confirmPassword) : </span><span>@Html.PasswordFor(model => model.confirmPassword)</span><span>@Html.ValidationMessageFor(model => model.confirmPassword)</span><br />
        <button type="submit">Ajouter</button>
        }
</div>