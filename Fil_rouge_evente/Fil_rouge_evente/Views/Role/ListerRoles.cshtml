@model IEnumerable<Fil_rouge_evente.Metier.Role>
@{
    ViewBag.Title = "ListerRoles";
}

<h2>Lister les roles</h2>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.RoleId)</th>
                <th>@Html.DisplayNameFor(model => model.nomRole)</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var m in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => m.RoleId)</td>
                    <td>@Html.DisplayFor(modelItem => m.nomRole)</td>
                </tr>
            }
        </tbody>
    </table>
</div>